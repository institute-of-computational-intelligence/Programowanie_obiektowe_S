<Window x:Class="WpfApp2.GradesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="GradeWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dg" HorizontalAlignment="Left" Height="239" Margin="37,116,0,0" VerticalAlignment="Top" Width="683" SelectionChanged="Grades_SelectionChanged"/>
        <Button x:Name="AddGrade" Content="Add" HorizontalAlignment="Left" Margin="117,49,0,0" VerticalAlignment="Top" Width="75" Click="AddGrade_Click"/>
        <Button x:Name="RemoveGrade" Content="Remove" HorizontalAlignment="Left" Margin="304,49,0,0" VerticalAlignment="Top" Width="75" Click="RemoveGrade_Click"/>
        <Button x:Name="Back" Content="Back" HorizontalAlignment="Left" Margin="464,49,0,0" VerticalAlignment="Top" Width="75" Click="Back_Click"/>

    </Grid>
</Window>
