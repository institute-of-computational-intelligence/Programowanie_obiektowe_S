<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="AddButton" Content="Add Student" HorizontalAlignment="Left" Margin="24,30,0,0" VerticalAlignment="Top" Width="100" Click="AddButton_Click"/>
        <Button x:Name="RemoveButton" Content="Remove Student" HorizontalAlignment="Left" Margin="142,30,0,0" VerticalAlignment="Top" Width="100" Click="RemoveButton_Click"/>
        <DataGrid x:Name="dg" HorizontalAlignment="Left" Height="314" Margin="24,78,0,0" VerticalAlignment="Top" Width="719"/>
        <Button x:Name="AddGarde" Content="Add Grade" HorizontalAlignment="Left" Margin="269,30,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="-0.624,-0.706" Click="AddGarde_Click"/>
        <Button x:Name="ShowGrades" Content="Show Grades" HorizontalAlignment="Left" Margin="400,30,0,0" VerticalAlignment="Top" Width="100" Click="ShowGrades_Click"/>

    </Grid>
</Window>
