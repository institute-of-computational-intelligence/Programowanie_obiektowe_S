<Window x:Class="Lab11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dg" HorizontalAlignment="Left" Height="295" Margin="10,114,0,0" VerticalAlignment="Top" Width="772"/>
        <Button Content="Dodaj" HorizontalAlignment="Left" Margin="578,44,0,0" VerticalAlignment="Top" Width="75" Click="addButton_Click"/>
        <Button Content="Usuń" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="466,44,0,0" Click="removeButton_Click"/>
        <TextBox x:Name="filterTB" HorizontalAlignment="Left" Height="23" Margin="10,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Modyfikuj" HorizontalAlignment="Left" Margin="700,44,0,0" VerticalAlignment="Top" Width="75" Click="editButton_Click"/>
        <Button Content="Filtruj" HorizontalAlignment="Left" Margin="135,85,0,0" VerticalAlignment="Top" Width="75" Click="filterButton_Click"/>

    </Grid>
</Window>
