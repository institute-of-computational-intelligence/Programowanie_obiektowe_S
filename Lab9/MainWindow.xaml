        <Button Content="LoadFromFile" HorizontalAlignment="Left" Margin="627,389,0,0" VerticalAlignment="Top" Width="75" Click="loadFromFileButton_Click"/>
        <Button Content="SaveToXML" HorizontalAlignment="Left" Margin="547,389,0,0" VerticalAlignment="Top" Width="75" Click="saveToXMLButton_Click"/>
        <Button Content="LoadFromXML" HorizontalAlignment="Left" Margin="467,389,0,0" VerticalAlignment="Top" Width="75" Click="loadFromXMLButton_Click"/>

    </Grid>
</Window>
