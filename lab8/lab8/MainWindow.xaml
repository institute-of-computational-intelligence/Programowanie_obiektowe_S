<Window x:Class="lab8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="AddStudent" HorizontalAlignment="Left" Margin="30,40,0,0" VerticalAlignment="Top" Width="100" Name="add" Click="add_Click"/>
        <Button Content="RemoveStudent" HorizontalAlignment="Left" Margin="150,40,0,0" VerticalAlignment="Top" Width="100" Name="remove" Click="remove_Click"/>
        <DataGrid x:FieldModifier="public" HorizontalAlignment="Left" Height="100" Margin="30,100,0,0" VerticalAlignment="Top" Width="600" Name="dg"/>
        <Button Content="ViewGrades" HorizontalAlignment="Left" Margin="565,222,0,0" VerticalAlignment="Top" Width="75" Name="grades" Click="grades_Click"/>



    </Grid>
</Window>
