<Window x:Class="lab8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="AddStudentButton" Content="AddStudent" HorizontalAlignment="Left" Margin="38,28,0,0" VerticalAlignment="Top" Width="111" Height="29" Click="AddStudentButton_Click"/>
        <Button x:Name="RemoveStudentButton" Content="RemoveStudent" HorizontalAlignment="Left" Margin="177,28,0,0" VerticalAlignment="Top" Width="111" Height="29" Click="RemoveStudentButton_Click" />
        <DataGrid x:Name="dg" HorizontalAlignment="Left" Height="321" Margin="10,88,0,0" VerticalAlignment="Top" Width="772" AutoGenerateColumns="False" SelectionChanged="dg_SelectionChanged" SelectionMode="Single" CanUserDeleteRows="False" />
        <Button x:Name="ShowGradesButton" Content="ShowGrades" HorizontalAlignment="Left" Margin="318,28,0,0" VerticalAlignment="Top" Width="111" Height="29" Click="ShowGradesButton_Click" />
        <Button x:Name="AddGradeButton" Content="AddGrade" HorizontalAlignment="Left" Margin="460,28,0,0" VerticalAlignment="Top" Width="111" Height="29" Click="AddGradeButton_Click"/>

    </Grid>
</Window>
