<Window x:Class="Lab12.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab12.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Connect &amp; Download" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="162" Click="Button_Click"/>
        <DataGrid x:Name="messagesDG" HorizontalAlignment="Left" Height="159" Margin="10,66,0,0" VerticalAlignment="Top" Width="772" SelectionChanged="messagesDG_SelectionChanged"/>
        <DataGrid x:Name="attachmentsDG" HorizontalAlignment="Left" Height="148" Margin="10,261,0,0" VerticalAlignment="Top" Width="772"/>
        <Label Content="Messages" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
        <Label Content="Attachments" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
