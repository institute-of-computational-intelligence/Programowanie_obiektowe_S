<Window x:Class="Lab12.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="b_connectDownload" Content="Connect &amp; Download" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="183" Height="39" Click="B_connectDownload_Click" />
        <DataGrid x:Name="DG_Messages" HorizontalAlignment="Left" Height="122" Margin="10,90,0,0" VerticalAlignment="Top" Width="774" SelectionMode="Single" SelectionChanged="DG_Messages_SelectionChanged"/>
        <DataGrid x:Name="DG_ATTACHMENTS" HorizontalAlignment="Left" Height="122" Margin="10,236,0,0" VerticalAlignment="Top" Width="774" SelectionMode="Single"/>
        <Label Content="Messages" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top"/>
        <Label Content="Attachments" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
