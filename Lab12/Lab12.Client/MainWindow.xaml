<Window x:Class="Lab12.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab12.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="406.333" Width="365.5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,5" Width="98" Click="btnConnect_Click"/>
        <DataGrid x:Name="dgMessages" Margin="10" Grid.Row="2" SelectionChanged="dgMessages_SelectionChanged"/>
        <DataGrid x:Name="dgAttachments" Margin="10" Grid.Row="4"/>
        <Label Content="Messages" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1"/>
        <Label Content="Attachments" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="3"/>

    </Grid>
</Window>
